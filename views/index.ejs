  <head>
    <meta charset="utf-8">
     <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
      <title>Likeastore. comming soon...</title>
      <meta name="description" content="">
      <meta name="viewport" content="width=device-width">
      <link rel="stylesheet" href="components/css/normalize.css">
      <link rel="stylesheet" href="components/css/main.css">
  </head>

  <body>
    <div class="likeastore-comming">
        <a href="#" class="las-logo"></a>

        <div class="comming-steps">
          <div class="step">
            <div class="step-count">1</div>
            <div class="step-description">
              <h2>Sign up</h2>
              <p>Easy sign up in 2 clicks</p>
            </div>
          </div>
          <div class="step">
            <div class="step-count">2</div>
            <div class="step-description">
              <h2>Turn on network</h2>
              <p>Turn on networks which you use</p>
            </div>
          </div>
          <div class="step">
            <div class="step-count">3</div>
            <div class="step-description">
              <h2>Enjoy</h2>
              <p>Store your favourites in one place</p>
            </div>
          </div>
        </div>

        <div class="notifyme-deck">
          <form class="notify-me form-inline" action="/notify" method="post">   
              <input id="email" type="text" placeholder="your@email.com">
              <button type="submit">Notify me</button>
          </form>
          <div class="notification success-message">You've been subscribed!</div> 
        </div>
    </div>
    

    <!-- Le javascript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="components/jquery/jquery.js"></script>
    
    <script type="text/javascript">
      $(function () {
       $('.notify-me').on('submit', function (e) {
          e.preventDefault();

          var $email = $('#email');
          var $group = $email.parent();

          $group.removeClass('error');
          $group.find('.notification').remove();

          var email = $email.val();
          if (!validateEmail(email)) {
            $group.addClass('error');
            $group.append('<div class="notification help-inline">Your email looks strange, please correct</div>');
            
            return;
          }

          $.post('/notify', {email: email}, function () {
            $('.success-message').show();
          });
        });

        function validateEmail(email) {
            var re = /\S+@\S+\.\S+/;
            return re.test(email);
        }
      });
  </script>

  </body>
</html>
