  <head>
    <meta charset="utf-8">
     <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
      <title>Likeastore. coming soon...</title>
      <meta name="description" content="">
      <meta name="viewport" content="width=device-width">
      <link rel="stylesheet" href="components/css/normalize.css">
      <link rel="stylesheet" href="components/css/main.css">
      <LINK rel="shortcut icon" href="components/img/favicon.ico" />
  </head>

  <body>
    <div class="likeastore-comming">
        <a href="#" class="las-logo"></a>

        <div class="comming-steps">
          <div class="step">
            <div class="step-count">1</div>
            <div class="step-description">
              <h2>Sign up</h2>
              <p>Easy sign up in 2 clicks</p>
            </div>
          </div>
          <div class="step">
            <div class="step-count">2</div>
            <div class="step-description">
              <h2>Turn on network</h2>
              <p>Turn on networks which you use</p>
            </div>
          </div>
          <div class="step">
            <div class="step-count">3</div>
            <div class="step-description">
              <h2>Enjoy</h2>
              <p>Search your favourites in one place</p>
            </div>
          </div>
        </div>

        <div class="notifyme-deck">
          <form class="notify-me" action="/notify" method="post">
              <input type="text" class="email" placeholder="your@email.com">
              <button class="sbm-btn" type="submit">Notify me</button>
          </form>
        </div>
    </div>

    <script src="components/jquery/jquery.js"></script>
    <script type="text/javascript">
      $(function () {
       $('.notify-me').on('submit', function (e) {
          e.preventDefault();
          $('.sbm-btn').addClass('loading-btn');

          var $form = $(e.target);
          var $email = $form.find('.email');
          var email = $email.val();

          $form.removeClass('error');
          $form.find('.notification').remove();

          if (!validateEmail(email)) {
            $form.addClass('error');
            $('.sbm-btn').removeClass('loading-btn').text('Notify me');
            $form.append('<div class="notification help-inline">Your email looks strange, please correct</div>');

            return;
          }

          $.post('/notify', {email: email}, function () {
            $('.sbm-btn').removeClass('loading-btn').text('Notify me');
            $form.append('<div class="notification success-message">You\'ve been subscribed!</div>');
          });
        });

        function validateEmail(email) {
            var re = /^([\w.-]+)@([\w-]+)((.(\w){2,3})+)$/i;
            return re.test(email);
        }
      });
  </script>

  </body>
