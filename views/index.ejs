<% layout('layout') -%>
<% block('bodyClass', 'welcome-page') -%>

<a href="/login" class="go-to-login">Login</a>

<div class="wrap">
	<h2 class="logo big">likeastore.</h2>
	<div class="desc">An easy way to keep all your likes in one place.</div>

	<div class="image-container">
		<img class="mac-img" src="../img/likemac@2x.png">
	</div>

	<a href="/register" class="register-btn">Registration</a>

	<section class="promo-wrap">
		<div class="pr">
			<h4>Never lost the things you like</h4>
			<p>Keep every piece of your social activity on one page and in one account. Organize and search your likes and get all you need much faster with our service.</p>
		</div>

		<div class="pr">
			<h4>But still 'work in progress'</h4>
			<p>Our status is public beta now and we continue to add new services while getting better with existing features. Your <a href="mailto:app@likeastore.com">feedback</a> is highly appreciated.</p>
		</div>

		<div class="pr last">
			<h4>Subscribe for new features</h4>
			<p>Don't you want another service to connect in your feed? Get notified when updates are on their way. Actually no spam, we promise!</p>

			<form class="formular subscribe" action="/notify" method="post" accept-charset="utf-8" novalidate>
				<input type="email" name="email" class="field email" placeholder="youremail@example.com">
				<button type="submit" class="do-subscribe-btn notify-btn btn">Notify me</button>
				<%- partial('flash-modal') %>
			</form>
		</div>
	</section>
</div>

<div class="social-buttons">
	<a href="https://twitter.com/share" class="twitter-share-button" data-url="http://likeastore.com" data-text="Never lost the things you liked with @likeastore" data-related="likeastore">Tweet</a>
	<div class="fb-like" data-href="http://likeastore.com" data-send="false" data-layout="button_count" data-width="450" data-show-faces="false"></div>
</div>

<footer>
	<p>
		<i data-icon="m" class="icon"></i>
		Handcrafted with love in Kiev
	</p>
</footer>

<% script('js/formular.js') -%>
