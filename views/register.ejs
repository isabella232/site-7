<% layout('layout') -%>

<div class="wrap register-page">
	<h2 class="logo small"><a href="/">likeastore.</a></h2>

	<h3>Create unique storage of interests</h2>

	<div class="auth-block">
		<form action="/auth/local/register" class="auth register" method="post" accept-charset="utf-8" novalidate autocomplete="off">
			<div>
				<input type="text" name="username" class="field username" placeholder="Username">
			</div>
			<div>
				<input type="email" name="email" class="field email" placeholder="Email">
			</div>
			<div>
				<input type="password" name="password" class="field password" placeholder="Password">
			</div>
			<button type="submit" class="btn do-register-btn">Register</button>
			<div class="auth-help">Already have an account? <a href="/login">Login.</a></div>
		</form>

		<%- partial('socials') %>
	</div>
</div>

<% script('js/auth.js') -%>