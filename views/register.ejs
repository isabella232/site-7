<% layout('layout') -%>
<% block('bodyClass', 'register-page') -%>

<div class="wrap">
	<h2 class="logo small"><a href="/">likeastore.</a></h2>

	<div class="auth-block clearfix">
		<form action="/auth/local/register" class="formular register" method="post" accept-charset="utf-8" novalidate>
			<div>
				<input type="text" name="username" class="field username" placeholder="Username" autocomplete="off">
			</div>
			<div>
				<input type="email" name="email" class="field email" placeholder="Email" autocomplete="off">
			</div>
			<div>
				<input type="password" name="password" class="field password" placeholder="Password">
			</div>
			<button type="submit" class="btn do-register-btn">Register</button>
			<div class="auth-help">Already have an account? <a href="/login">Login.</a></div>
			<%- partial('error-modal') %>
		</form>

		<%- partial('socials') %>
	</div>
</div>

<% script('js/formular.js') -%>